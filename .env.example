# Environment Configuration Template
# Copy this file to secrets.env and fill in your values

# OpenRouter API Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_TIMEOUT=60.0

# Application Settings
APP_NAME=AssistMe Virtual Assistant
APP_URL=http://localhost:3000
DEV_MODE=true

# Database Configuration (for local development)
# In production, Railway will provide these automatically
DATABASE_URL=postgresql://assistme_user:assistme_password@localhost:5432/assistme_db

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://redis:6379

# Development/Production Mode
# Set to false for production
DEV_MODE=true
