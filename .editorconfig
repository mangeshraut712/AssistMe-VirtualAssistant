# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, JSX, JSON, CSS
[*.{js,jsx,json,css}]
indent_size = 2

# YAML configuration files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Git configuration
[.git*]
indent_size = 4

# Makefile requires tabs
[Makefile]
indent_style = tab
