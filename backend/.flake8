[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .eggs,
    migrations

# Ignore line-too-long in multiline strings (prompts, docstrings)
# E501: line too long
# W503: line break before binary operator (conflicts with PEP 8)
# E203: whitespace before ':' (conflicts with black)
extend-ignore = E501, W503, E203

# Be strict about syntax errors and undefined names
select = E9, F63, F7, F82, E, W, F

# Complex functions limit
max-complexity = 15

# Per-file ignores for specific issues
per-file-ignores =
    # Allow module-level imports not at top (needed for conditional imports)
    app/main.py: E402
    app/dependencies.py: E402
    # Allow long lines in prompt/template files
    app/ai4bharat.py: E501
    app/services/*.py: E501
    app/routes/gemini.py: E501
    app/providers/*.py: E501

# Statistics
statistics = True
count = True
