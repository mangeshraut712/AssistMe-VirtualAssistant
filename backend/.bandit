# Bandit Security Configuration
# https://bandit.readthedocs.io/en/latest/config.html

[bandit]
# Exclude test files and virtual environments
exclude_dirs = ['tests', 'venv', '.venv', '__pycache__', 'migrations']

# Skip specific tests that generate false positives
skips = ['B101', 'B104', 'B311']

# B101: assert_used - asserts are fine in non-production code
# B104: hardcoded_bind_all_interfaces - needed for container deployments
# B311: random - we use random for non-security purposes

[bandit.assert_used]
skips = ['*_test.py', 'test_*.py', 'conftest.py']

# Aggregate output to show severity levels
aggregate = file

# Show confidence level
confidence = medium
