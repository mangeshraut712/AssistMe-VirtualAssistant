{
  "name": "assistme-virtual-assistant",
  "version": "3.0.0",
  "description": "Next-generation AI virtual assistant with multimodal interactions, real-time voice processing, multilingual support (22+ Indian languages), and advanced RAG technology",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css,json}\"",
    "serve:frontend": "npx http-server . -p 3000 -c-1 --cors",
    "serve:backend": "cd backend && source venv/bin/activate && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8001",
    "start": "npm-run-all --parallel serve:*",
    "backend:setup": "cd backend && python -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "db:migrate": "cd backend && alembic upgrade head",
    "vercel:build": "npm run build",
    "typecheck": "tsc --noEmit 2>/dev/null || true",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "keywords": [
    "ai",
    "chat",
    "assistant",
    "virtual-assistant",
    "voice",
    "multilingual",
    "rag",
    "openrouter",
    "react",
    "fastapi",
    "frontend",
    "backend"
  ],
  "author": "AssistMe Team",
  "license": "MIT",
  "homepage": "https://github.com/mangeshraut712/AssistMe-VirtualAssistant#readme",
  "bugs": {
    "url": "https://github.com/mangeshraut712/AssistMe-VirtualAssistant/issues"
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^7.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "terser": "^5.36.0",
    "vite": "^7.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mangeshraut712/AssistMe-VirtualAssistant.git"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "chart.js": "^4.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.0.0",
    "framer-motion": "^12.23.26",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.554.0",
    "marked": "^17.0.1",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-is": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^3.5.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7"
  },
  "engines": {
    "node": "20.x"
  }
}
