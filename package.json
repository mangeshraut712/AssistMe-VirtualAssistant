{
  "name": "assistme-virtual-assistant",
  "version": "2.0.0",
  "description": "AI chat experience with modern UI",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/generate-legacy-entry.js",
    "preview": "vite preview",
    "serve:frontend": "npx http-server . -p 3000 -c-1 --cors",
    "serve:backend": "cd backend && source venv/bin/activate && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8001",
    "start": "npm-run-all --parallel serve:*",
    "backend:setup": "cd backend && python -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "db:migrate": "cd backend && alembic upgrade head",
    "vercel:build": "npm run build"
  },
  "keywords": [
    "ai",
    "chat",
    "assistant",
    "frontend",
    "backend"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-legacy": "^7.2.1",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "terser": "^5.36.0",
    "vite": "^7.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mangeshraut712/AssistMe-VirtualAssistant.git"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "chart.js": "^4.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.554.0",
    "marked": "^17.0.1",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-is": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^3.5.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7"
  },
  "engines": {
    "node": "20.x"
  }
}