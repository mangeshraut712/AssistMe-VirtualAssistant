[bandit]
exclude_dirs = .git,.svn,.hg,.bzr,.tox,.eggs,__pycache__,build,dist,node_modules,.venv,.vscode
skips = B101,B601

[logging]
# Possible choices are DEBUG, INFO, WARNING, ERROR, CRITICAL
log_level = INFO

[blacklists]
# Include standard blacklisted functions
Call = insecure_random,pop,index_without_range
Import = telnetlib,ftplib,http.client
Message = risky_function,risky_message
